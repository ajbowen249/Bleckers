<div class="board-outer">
    @foreach (var row in Game.Board) {
        <div class="board-row">
            @foreach (var cell in row) {
                <BoardCell Model="cell" Game="Game" />
            }
        </div>
    }
</div>

@code {
    [Parameter, EditorRequired]
    public GameModel Game { get; set; } = default!;
}
